---
import Modal from "./Modal.astro";

---

<div x-data="{ showModal: false, showSecondModal: false}" class="inset-0 bg-opacity-75 transition-opacity">
      
    <div id="indicators-carousel" class="relative h-full md:w-1/2 w-full lg:w-11/12 mx-auto" data-carousel="static">
      
      <!-- Carousel wrapper -->
        <div class="relative rounded-lg ">
            <div class="relative h-[250px] md:h-[550px] overflow-hidden rounded-lg ">
                <!-- Item 1 -->
                <div  class="hidden duration-700 mx-auto ease-in-out bg-slate-600/75" data-carousel-item="active">
                 <div class="relative">
                     <img src="video/poster-1.jpg">
                     <div class="absolute z-10 w-full md:flex justify-center md:items-center h-full bg-no-repeat top-0 left-0" >
                         <div class="flex w-full h-full justify-center items-center">
                             <span style="cursor:pointer;" @click="showModal = !showModal">
                                 <ion-icon name="play-circle-outline"  style="color:white; font-size: 100px" id="play-button"></ion-icon>
                             </span>
                         </div>
                     </div>
                 </div>
                 </div>
               <!-- Item 2 -->
               <div  class="hidden duration-700 mx-auto ease-in-out bg-slate-600/75" data-carousel-item>
                <div class="relative">
                    <img src="video/poster-1.jpg">
                    <div class="absolute z-10 w-full md:flex justify-center md:items-center h-full bg-no-repeat top-0 left-0" >
                        <div class="flex w-full h-full justify-center items-center">
                            <span style="cursor:pointer;" @click="showSecondModal = !showSecondModal">
                                <ion-icon name="play-circle-outline"  style="color:white; font-size: 100px" id="play-button"></ion-icon>
                            </span>
                        </div>
                    </div>
                </div>
                </div>
           </div>
        </div>




        
      <!-- Slider indicators -->
      <div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2">
          <button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
          <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
      </div>
      <!-- Slider controls -->
      <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-black/75  group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
          <svg class="w-3 h-3 text-white " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
          </svg>
          <span class="sr-only">Previous</span>
      </span>
  </button>
  <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-black/75 group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
          <svg class="w-3 h-3 text-white " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <span class="sr-only">Next</span>
      </span>
  </button>
      
    </div>


    <div x-show="showModal" class="fixed inset-0 bg-black/50 z-30 bg-opacity-75 transition-opacity">
        <Modal video="video/video-1.mp4" modal="showModal"></Modal>
    </div>

    <div x-show="showSecondModal" class="fixed inset-0 bg-black/50 z-30 bg-opacity-75 transition-opacity">
        <Modal video="video/video-2.mp4" modal="showSecondModal"></Modal>
    </div>
</div>

    

    
    
      